{
    "manifest_version": 3,
    "name": "Dark Theme",
    "description": "Custom dark theme for all websites",
    "version": "0.1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["contentScript.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "/Icons/Logo-16.png"
    },
    "icons": {
        "16": "/Icons/Logo-16.png",
        "48": "/Icons/Logo-48.png",
        "128": "/Icons/Logo-128.png"
    }
}